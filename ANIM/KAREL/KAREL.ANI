Case Smer

	In 0:	Case Rnd(8)
			In 0: Pic(Karel11,X,Y);
			In 1: Pic(Karel12,X,Y);
			In 2: Pic(Karel13,X,Y);
			In 3: Pic(Karel14,X,Y);
			In 4: Pic(Karel15,X,Y);
			In 5: Pic(Karel16,X,Y);
			In 6: Pic(Karel17,X,Y);
			In 7: Pic(Karel18,X,Y);
