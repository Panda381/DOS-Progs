         ldir                               ; £schova tabulky kl†ves
         pop       hl                       ; mapa prvn°ho stisku kl†ves
         pop       de                       ; mapa stisknutòch kl†ves

; ------ naáten° jednoho sloupce kl†ves

         di                                 ; zak†z†no p©eru®en°
         ld        bc,10*HI + 0f0h          ; B <- poáet sloupcñ, C <- sloupec 0
KlavRea1:ld        a,c                      ; A <- maska sloupce
         out       (0d0h),a                 ; nastaven° sloupce kl†vesnice
         nop                                ; mal† prodleva
         in        a,(0d1h)                 ; naáten° sloupce kl†vesnice
         cpl                                ; 1=stisk kl†vesy
