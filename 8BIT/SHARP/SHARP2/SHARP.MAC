         ld        a," "                    ; mazac° znak mezery
         ld        (hl),a                   ; vymaz†n° znaku
         inc       de
         ld        bc,Pozic-1
         ldir                               ; vymaz†n° textu posledn°ho ©†dku

; ------ rolov†n° barev obrazovky o ©†dek nahoru

         ld        de,VRAMCol               ; text - ©†dek 0
